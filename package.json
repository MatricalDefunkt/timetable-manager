{
  "name": "timetable_manager_backend",
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "start": "bun run start:frontend & bun run start:backend",
    "start:frontend": "bunx --bun vite",
    "start:backend": "bun run src/backend/index.ts",
    "dev": "bun run dev:frontend & bun run dev:backend",
    "dev:frontend": "bunx --bun vite",
    "dev:backend": "bun run --hot src/backend/index.ts",
    "build": "bun lint && tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 100",
    "preview": "vite preview"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@elysiajs/cors": "^0.8.0",
    "@types/papaparse": "^5.3.14",
    "elysia": "^0.8.3",
    "mysql2": "^3.9.0",
    "papaparse": "^5.4.1",
    "sequelize": "^6.37.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.3",
    "upload-js": "^2.24.3"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "bun-types": "^1.0.19",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  }
}
